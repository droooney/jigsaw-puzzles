{
  "compilerOptions": {
    "module": "ES2020",
    "target": "ES2019",
    "jsx": "react",
    "moduleResolution": "node",
    "baseUrl": ".",
    "paths": {
      "components/*": ["./app/components/*"]
    },
    "typeRoots": [
      "node_modules/@types",
      "app/shared/typings"
    ],
    "esModuleInterop": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "skipLibCheck": true,
    "strict": true,
    "sourceMap": true
  },
  "include": [
    "app/**/*.ts",
    "app/**/*.tsx"
  ]
}
